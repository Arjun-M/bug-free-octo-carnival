{
  "name": "isobox",
  "version": "1.0.0",
  "description": "Production-grade JavaScript/TypeScript sandbox with strict timeouts, memory filesystem, and multi-file support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm run test -- --watch"
  },
  "keywords": [
    "sandbox",
    "javascript",
    "typescript",
    "security",
    "isolate",
    "vm",
    "vm2",
    "isolated-vm",
    "ai-sandbox",
    "untrusted-code"
  ],
  "author": "Arjun-M",
  "repository": {
    "type": "git",
    "url": "https://github.com/Arjun-M/Isobox"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "isolated-vm": "^5.0.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
