{
  "name": "isobox",
  "version": "1.0.0",
  "description": "Production-grade JavaScript/TypeScript sandbox with strict timeouts, memory filesystem, and multi-file support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --fix",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "sandbox",
    "javascript",
    "typescript",
    "security",
    "isolate",
    "vm",
    "untrusted-code"
  ],
  "author": "Arjun-M",
  "repository": {
    "type": "git",
    "url": "Arjun-M/Isobox"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "isolated-vm": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.26",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
